<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :gender_eq %>
    <%= f.select :gender_eq, ['Male', 'Female', 'Other'], prompt: 'Select Gender' %>
  </div>



  <div class="form-group">
    <%= f.submit "Search" %>
    <%= link_to 'Reset', users_path, class: 'btn btn-default' %>
  </div>
<% end %>



<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th><%= sort_link @q, :age, 'Age' %></th>
      <th>gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image("50x50") %></td>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= user.gender %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
